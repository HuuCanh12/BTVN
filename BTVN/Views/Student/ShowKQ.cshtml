@model BTVN.Models.Student

@{
    ViewData["Title"] = "Kết quả đăng ký";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h4>Đăng ký thành công</h4>
        </div>
        <div class="card-body">
            <p class="lead">
                Cảm ơn bạn @Model.MSSV - @Model.HoTen đã đăng ký chuyên ngành @Model.ChuyenNganh
            </p>

            <div class="alert alert-info">
                <p>Số lượng sv đã đăng ký ngành giống bạn là: @ViewBag.CountSameSpecialization</p>
            </div>

            <a asp-action="Index" class="btn btn-primary">Quay lại trang đăng ký</a>
        </div>
    </div>
</div> 

<h2>Kết quả đăng ký</h2>

<p>
    Cảm ơn bạn <strong>@Model.MSSV - @Model.HoTen</strong> đã đăng ký chuyên ngành <strong>@Model.ChuyenNganh</strong>.
</p>
<p>
    Số lượng sv đã đăng ký ngành giống bạn là: <strong>@ViewBag.CountSameSpecialization</strong>
</p>

@if (ViewBag.AllStudents != null && ((List<string>)ViewBag.AllStudents).Count > 0)
{
    <h4>Danh sách SV cùng chuyên ngành:</h4>
    <ul>
        @foreach (var sv in (List<string>)ViewBag.AllStudents)
        {
            <li>@sv</li>
        }
    </ul>
}