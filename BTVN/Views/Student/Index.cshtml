@model BTVN.Models.Student

@{
    ViewData["Title"] = "Đăng ký chuyên ngành";
}

<h2>Đăng ký chuyên ngành</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MSSV" class="control-label"></label>
                <input asp-for="MSSV" class="form-control" />
                <span asp-validation-for="MSSV" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HoTen" class="control-label"></label>
                <input asp-for="HoTen" class="form-control" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DiemTB" class="control-label"></label>
                <input asp-for="DiemTB" class="form-control" />
                <span asp-validation-for="DiemTB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChuyenNganh" class="control-label"></label>
                <select asp-for="ChuyenNganh" class="form-control">
                    <option value="">-- Chọn chuyên ngành --</option>
                    <option value="CNPM">Công nghệ phần mềm (CNPM)</option>
                    <option value="HTTT">Hệ thống thông tin (HTTT)</option>
                    <option value="ANM">An ninh mạng (ANM)</option>
                    <option value="TTNT">Trí tuệ nhân tạo (TTNT)</option>
                    <option value="MMT">Mạng máy tính (MMT)</option>
                </select>
                <span asp-validation-for="ChuyenNganh" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Đăng ký" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
